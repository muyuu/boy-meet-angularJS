{
  "node": false,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "devel": true, // console alertを許可
  "eqeqeq": true,
  "forin": true,
  "globals": {
    "$": false,
    "jQuery": false
  },
  "immed": true,
  "indent": 2,
  "jquery": true, // jQueryのグローバルオブジェクトを許可
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": "both",
  "regexp": true,
  "undef": true,
  "unused": true,
  "strict": false,
  "trailing": true,
  "smarttabs": true,
  "globals": {
    "angular": false
  },
  "laxcomma": true // カンマを最初に書いても良いとする
}
